    <div>
      <p class="your-workout-text">Your Workouts</p>
    </div>

    <div>
      <table>
        <tr>
          <th>Workout Name</th>
          <th>Sets</th>
          <th>Date</th>
          <th>Notes</th>
        </tr>
        <tbody class="js-workout-table-inital-row"></tbody>

        <tbody class="js-workout-table-body">
          <!--
            create a loop here and for all workout objects in the array, create a table row
          -->
          <% for (workout of workoutsArray) { %>
          <tr>
            <td><%=workout.name%></td>
            <td><%=workout.sets%></td>
            <td><%=workout.date%></td>
