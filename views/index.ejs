  <body>
    <header class="header">
      <div class="website-name">Personal Workout Tracker</div>
      <div class="nav-bar">
        <a href="/">
          <div class="nav-bar-item">Home</div>
        </a>

        <a href="/workout">
          <div class="nav-bar-item">Workouts</div>
        </a>

        <a href="/history">
          <div class="nav-bar-item">History</div>
        </a>

        <a href="/profile">
          <div class="nav-bar-item">Profile</div>
        </a>
      </div>
    </header>

    <div class="add-workout-form">
      <div class="add-workout-text">Add New Workout</div>

      <form action="/" method="POST">
        <div class="form-control">
          <label for="name">Name</label>
          <input type="text" name="name" id="name" required />
        </div>
        <div class="form-control">
          <label for="sets">Sets</label>
          <input type="text" name="sets" id="sets" required />
        </div>
        <div class="form-control">
          <label for="date">Date</label>
          <input type="date" name="date" id="date" required />
        </div>
        <div class="form-control">
          <label for="description">Describe your workout</label>
          <textarea name="description" id="description" rows="5"></textarea>
        </div>

        <button>Add Workout</button>
      </form>
    </div>

